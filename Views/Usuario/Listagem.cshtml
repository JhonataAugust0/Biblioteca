@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
    Console.WriteLine("Listagem de Usuários2");
}

<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
            <p>Nenhum registro encontrado.</p>
        }
        else {
            <table class="table table-striped">
                <thead>
                    <tr><th>Id</th>
                    <th>Nome</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Usuario l in Model)
                    {
                    <tr>
                        <td>@l.Id</td>
                        <td>@l.Nome</td>
                        <td><a href="/Usuario/Edicao/@l.Id">Editar</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
